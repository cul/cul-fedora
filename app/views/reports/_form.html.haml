
= render :partial => "report", :object => @report.data_hash, :locals => {:category => @report.category}

- form_for @report do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :category
    %br
    = f.select :category, Report::VALID_CATEGORIES
  %p
    = f.label :generated_on
    %br
    = f.datetime_select :generated_on
  %p
    = f.label :user_id
    %br
    = f.collection_select :user_id, User.admins, :id, :to_s
  %p
    = f.label :options
    %br
    = f.text_area :options
  %p
    = f.submit
