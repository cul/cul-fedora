- @page_title =  "Reports"

%table
  %tr
    %th Name
    %th Category
    %th Generated on
    %th User
  - for report in @reports
    %tr
      %td= h report.name
      %td= h report.category
      %td= h report.generated_on.to_formatted_s(:short)
      %td= h report.user.to_s
      %td= link_to 'Show', report
      %td= link_to 'Edit', edit_report_path(report)
      %td= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete

%h3 Create a new report of type:
%ul
  - Report::VALID_CATEGORIES.each do |category|
    = link_to category.to_s.humanize, :action => :preview, :category => category
