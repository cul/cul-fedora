- if current_user
  = link_to("Log Out", logout_path) + " [" + link_to(current_user.login, user_path(current_user)) + "]"
  - if current_user.last_search_url
    = "|"
    = link_to('View your last search', catalog_index_path(current_user.last_search_url))
    = "|"
  - if current_user.admin?
    = link_to("Admin", :controller => :admin)
    = "|"
  = link_to('Bookmarks', bookmarks_path) + "|"
  = link_to "Saved Searches", saved_searches_path
- else
  = link_to 'Login', login_path
="|"
= link_to "Folder", folder_index_path
="("
%span#folder_number= "#{session[:folder_document_ids] ? session[:folder_document_ids].length : 0}"
=") |"
= link_to "Search History", search_history_index_path
